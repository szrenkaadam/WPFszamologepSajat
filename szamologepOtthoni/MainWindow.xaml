<Window x:Class="szamologepOtthoni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szamologepOtthoni"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid Margin="5">

        <Grid.RowDefinitions>
            <!--Output-->
            <RowDefinition Height="100"/>
            <!--Számok-->
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="SevenBtn"
                Grid.Column="0"
                Grid.Row="1"
                Content="7" 
                FontSize="22" 
                FontWeight="Bold" 
                Click="NumBtn_Click"  Background="#FFE0C1FF"/>

        <Button x:Name="EightBtn"
        Grid.Column="1"
        Grid.Row="1"
        Content="8" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"  Background="#FFE0C1FF"/>

        <Button x:Name="NineBtn"
        Grid.Row="1"
        Grid.Column="2"
        Content="9" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Background="#FFE0C1FF"/>


        <Button x:Name="FourBtn"
        Grid.Row="2"
        Grid.Column="0"
        Content="4" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Background="#FFCEA0FD"/>

        <Button x:Name="FiveBtn"
        Grid.Row="2"
        Content="5" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Grid.Column="1" Background="#FFCEA0FD"/>

        <Button x:Name="SixBtn"
        Grid.Row="2"
        Grid.Column="2"
        Content="6" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Background="#FFCEA0FD"/>

        <Button x:Name="OneBtn"
        Grid.Row="3"
        Grid.Column="0"
        Content="1" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Background="#FFB47EEC"/>

        <Button x:Name="TwoBtn"
        Grid.Row="3"
        Content="2" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Grid.Column="1" Background="#FFB47EEC"/>

        <Button x:Name="ThreeBtn"
        Grid.Row="3"
        Grid.Column="2"
        Content="3" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Background="#FFB47EEC"/>

        <Button x:Name="ZeroBtn"
        Grid.Row="4"
        Content="0" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Grid.Column="1" Background="#FF9560CC"/>

        <Button x:Name="PlusBtn"
        Grid.Row="4"
        Grid.Column="3"
        Content="+" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="PlusBtn_Click" Background="#FFBAFFBE"/>

        <Button x:Name="MinusBtn"
         Grid.Row="3"
         Grid.Column="3"
         Content="-" 
         FontSize="22" 
         FontWeight="Bold" 
         Click="MinusBtn_Click" Background="#FFBAFFBE"/>

        <Button x:Name="MultiplyBtn"
         Grid.Row="2"
         Grid.Column="3"
         Content="x" 
         FontSize="22" 
         FontWeight="Bold" 
         Click="MultiplyBtn_Click" Background="#FFBAFFBE" />

        <Button x:Name="DivideBtn"
         Grid.Row="1"
         Grid.Column="3"
         Content="÷" 
         FontSize="22" 
         FontWeight="Bold" 
         Click="DivideBtn_Click" Background="#FFBAFFBE"/>

        <Button x:Name="EqualsBtn"
        Grid.Row="4"
        Grid.Column="2"
        Content="=" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="EqualsBtn_Click" Background="#FFBAFFBE"/>

        <Button  x:Name="ClearBtn"
                Content="C"
                HorizontalAlignment="Center"
                Grid.Row="4" VerticalAlignment="Center"
                Height="70"
                Width="66"
                Click="ClearBtn_Click" Background="#FFF1F790"
                FontSize="22" 
                FontWeight="Bold"/>

        <Button x:Name="RootBtn"
                Grid.Row="1"
                Grid.Column="4"
                Content="√" 
                FontSize="22" 
                FontWeight="Bold" 
                Click="RootBtn_Click" Background="#FFA6E6A9"/>

        <Button x:Name="PwBtn"
        Grid.Row="2"
        Grid.Column="4"
        Content="^" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="PwBtn_Click" Background="#FFA6E6A9"/>

        <Label 
           x:Name="OutputText" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Content=""
            FontSize="36"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            />
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Top" RenderTransformOrigin="0.307,0.376" Width="92" Grid.ColumnSpan="2"/>



    </Grid>
</Window>
