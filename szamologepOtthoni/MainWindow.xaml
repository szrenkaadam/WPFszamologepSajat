<Window x:Class="szamologepOtthoni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szamologepOtthoni"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <!--Output-->
            <RowDefinition Height="100"/>
            <!--Számok-->
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="SevenBtn"
                Grid.Column="0"
                Grid.Row="1"
                Content="7" 
                FontSize="22" 
                FontWeight="Bold" 
                Click="NumBtn_Click" />

        <Button x:Name="EightBtn"
        Grid.Column="1"
        Grid.Row="1"
        Content="8" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"/>

        <Button x:Name="NineBtn"
        Grid.Row="1"
        Grid.Column="2"
        Content="9" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"/>


        <Button x:Name="FourBtn"
        Grid.Row="2"
        Grid.Column="0"
        Content="4" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"/>

        <Button x:Name="FiveBtn"
        Grid.Row="2"
        Content="5" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Grid.Column="1"/>

        <Button x:Name="SixBtn"
        Grid.Row="2"
        Grid.Column="2"
        Content="6" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"/>

        <Button x:Name="OneBtn"
        Grid.Row="3"
        Grid.Column="0"
        Content="1" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"/>

        <Button x:Name="TwoBtn"
        Grid.Row="3"
        Content="2" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Grid.Column="1"/>

        <Button x:Name="ThreeBtn"
        Grid.Row="3"
        Grid.Column="2"
        Content="3" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click"/>

        <Button x:Name="ZeroBtn"
        Grid.Row="4"
        Content="0" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="NumBtn_Click" Grid.Column="1"/>

        <Button x:Name="PlusBtn"
        Grid.Row="4"
        Grid.Column="3"
        Content="+" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="PlusBtn_Click"/>

        <Button x:Name="MinusBtn"
         Grid.Row="3"
         Grid.Column="3"
         Content="-" 
         FontSize="22" 
         FontWeight="Bold" 
         Click="MinusBtn_Click"/>

        <Button x:Name="TimesBtn"
         Grid.Row="2"
         Grid.Column="3"
         Content="x" 
         FontSize="22" 
         FontWeight="Bold" 
         Click="NumBtn_Click" BorderBrush="#FFBBBBBB"/>

        <Button x:Name="DivideBtn"
         Grid.Row="1"
         Grid.Column="3"
         Content="÷" 
         FontSize="22" 
         FontWeight="Bold" 
         Click="NumBtn_Click"/>

        <Button x:Name="EqualsBtn"
        Grid.Row="4"
        Grid.Column="2"
        Content="=" 
        FontSize="22" 
        FontWeight="Bold" 
        Click="EqualsBtn_Click"/>

        <Button  x:Name="ClearBtn"
                Content="C"
                HorizontalAlignment="Center"
                Grid.Row="4" VerticalAlignment="Center"
                Height="70"
                Width="66"
                Click="ClearBtn_Click"
                FontSize="22" 
                FontWeight="Bold"/>

        <Button x:Name="RootBtn"
                Grid.Row="1"
                Grid.Column="4"
                Content="√" 
                FontSize="22" 
                FontWeight="Bold" 
                Click="NumBtn_Click"/>

        <Label 
           x:Name="OutputText" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Content=""
            FontSize="36"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            />
        


    </Grid>
</Window>
